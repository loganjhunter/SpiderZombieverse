<?xml version="1.0" encoding="UTF-8"?>
<configs>

	<!-- Remove current Biome spawns -->
	<remove xpath="/spawning/biome[@name='pine_forest']"></remove>
	<remove xpath="/spawning/biome[@name='desert']"></remove>
	<remove xpath="/spawning/biome[@name='snow']"></remove>
	<remove xpath="/spawning/biome[@name='burnt_forest']"></remove>
	<remove xpath="/spawning/biome[@name='wasteland']"></remove>
	<!-- Remove current Biome spawns -->
	<append xpath="/spawning">
	<!-- *** PINE_FOREST_SPAWNS -->
		<biome name="pine_forest">
			<spawn maxcount="4" respawndelay="0.05" time="Day" entitygroup="ZombiesAll" notags="commercial,industrial,downtown" />
			<spawn maxcount="8" respawndelay="0.25" time="Night" entitygroup="ZombiesNight" notags="commercial,industrial,downtown" />

			<spawn maxcount="8" respawndelay="0.05" time="Day" entitygroup="ZombiesAll" tags="commercial,industrial" notags="downtown" />
			<spawn maxcount="8" respawndelay="0.05" time="Night" entitygroup="ZombiesNight" tags="commercial,industrial" notags="downtown" />

			<spawn maxcount="8" respawndelay="0.05" time="Day" entitygroup="ZombiesForestDowntown" tags="downtown" />
			<spawn maxcount="8" respawndelay="0.05" time="Night" entitygroup="ZombiesForestDowntownNight" tags="downtown" />

			<spawn maxcount="2" respawndelay="1" time="Any" entitygroup="WildGameForest" spawnDeadChance="0" />
			<spawn maxcount="1" respawndelay="1" time="Night" entitygroup="WildGameForestNight" spawnDeadChance="0" />
			<spawn maxcount="1" respawndelay="3.2" time="Night" entitygroup="EnemyAnimalsForest" spawnDeadChance="0" />
		</biome>

		<!-- *** BURNT_FOREST_SPAWNS -->
		<biome name="burnt_forest">
			<spawn maxcount="2" respawndelay="0.05" time="Day" entitygroup="ZombiesBurntForest" />
			<spawn maxcount="8" respawndelay="0.25" time="Night" entitygroup="ZombiesNight" />

			<spawn maxcount="8" respawndelay="0.05" time="Day" entitygroup="ZombiesAll" tags="commercial,industrial" notags="downtown" />
			<spawn maxcount="8" respawndelay="0.05" time="Night" entitygroup="ZombiesNight" tags="commercial,industrial" notags="downtown" />

			<spawn maxcount="8" respawndelay="0.05" time="Day" entitygroup="ZombiesDowntown" tags="downtown" />
			<spawn maxcount="8" respawndelay="0.25" time="Night" entitygroup="ZombiesDowntown" tags="downtown" />

			<spawn maxcount="1" respawndelay="1" time="Any" entitygroup="WildGameForest" spawnDeadChance="0" />
			<spawn maxcount="1" respawndelay="1.1" time="Night" entitygroup="EnemyAnimalsBurntForest" spawnDeadChance="0" />
		</biome>

		<!-- *** DESERT_SPAWNS -->
		<biome name="desert">
			<spawn maxcount="8" respawndelay="0.25" time="Any" entitygroup="ZombiesAll" notags="commercial,industrial,downtown" />
			<spawn maxcount="8" respawndelay="0.25" time="Night" entitygroup="ZombiesNight" notags="commercial,industrial,downtown" />
			
			<spawn maxcount="8" respawndelay="0.05" time="Day" entitygroup="ZombiesAll" tags="commercial,industrial" notags="downtown" />
			<spawn maxcount="8" respawndelay="0.05" time="Night" entitygroup="ZombiesNight" tags="commercial,industrial" notags="downtown" />

			<spawn maxcount="8" respawndelay="0.05" time="Day" entitygroup="ZombiesDowntown" tags="downtown" />
			<spawn maxcount="8" respawndelay="0.05" time="Night" entitygroup="ZombiesDowntown" tags="downtown" />
			
			<spawn maxcount="1" respawndelay="1" time="Any" entitygroup="WildGameForest" spawnDeadChance="0" />
			<spawn maxcount="1" respawndelay="3.5" time="Any" entitygroup="EnemyAnimalsDesert" spawnDeadChance="0" />
		</biome>

		<!-- *** SNOW_SPAWNS -->
		<biome name="snow">
			<spawn maxcount="8" respawndelay="0.05" time="Any" entitygroup="SnowZombies" notags="downtown" />
			<spawn maxcount="8" respawndelay="0.25" time="Night" entitygroup="ZombiesNight" notags="commercial,industrial,downtown" />

			<spawn maxcount="8" respawndelay="0.09" time="Day" entitygroup="ZombiesAll" tags="commercial,industrial" notags="downtown" />
			<spawn maxcount="8" respawndelay="0.06" time="Night" entitygroup="ZombiesNight" tags="commercial,industrial" notags="downtown" />

			<spawn maxcount="8" respawndelay="0.07" time="Day" entitygroup="ZombiesDowntown" tags="downtown" />
			<spawn maxcount="8" respawndelay="0.04" time="Night" entitygroup="ZombiesDowntown" tags="downtown" />

			<spawn maxcount="1" respawndelay="1" time="Any" entitygroup="WildGameForest" spawnDeadChance="0" />
			<spawn maxcount="1" respawndelay="3.1" time="Any" entitygroup="EnemyAnimalsSnow" spawnDeadChance="0" />
		</biome>

		<!-- *** WASTELAND_SPAWNS -->
		<biome name="wasteland">
			<spawn maxcount="8" respawndelay="0.03" time="Day"	entitygroup="ZombiesWasteland" notags="commercial,industrial,downtown" />
			<spawn maxcount="8" respawndelay="0.001" time="Night" entitygroup="ZombiesWastelandNight" notags="commercial,industrial,downtown" />

			<spawn maxcount="8" respawndelay="0.03" time="Day" entitygroup="ZombiesWasteland" tags="commercial,industrial" notags="downtown" />
			<spawn maxcount="8" respawndelay="0.002" time="Night" entitygroup="ZombiesWastelandNight" tags="commercial,industrial" notags="downtown" />

			<spawn maxcount="8" respawndelay="0.0167" time="Day" entitygroup="ZombiesWastelandDowntown" tags="downtown" />
			<spawn maxcount="8" respawndelay="0.002" time="Night" entitygroup="ZombiesWastelandDowntown" tags="downtown" />

			<spawn maxcount="1" respawndelay="0.3" time="Any" entitygroup="EnemyAnimalsWasteland" spawnDeadChance="0" />
		</biome>

	
	</append>
</configs>